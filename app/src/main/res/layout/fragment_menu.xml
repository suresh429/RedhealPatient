<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context="com.medoske.www.redhealpatient.Fragments.MenuFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center_horizontal">


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:layout_gravity="right" />
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="1dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_weight="0"
            android:layout_margin="3dp"
            android:id="@+id/cv">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:weightSum="1">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:scrollbars="none"
                    android:layout_height="150dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:id="@+id/llImage"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_height="wrap_content">

                        </LinearLayout>
                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_action_placeholder"
                            android:maxHeight="200dp"
                            android:scaleType="centerCrop"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:id="@+id/img_post"/>
                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="1">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edTitle"
                        android:minHeight="48dp"
                        android:paddingLeft="5dp"
                        android:textSize="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/slotBackground"
                        android:background="@android:color/white"
                        android:hint="Enter a funny title.."
                        android:layout_weight="1" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edDes"
                        android:minHeight="48dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:hint="Enter descibe "
                        android:background="@color/wallet_holo_blue_light"
                        android:layout_gravity="center_horizontal" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edCatalog"
                        android:minHeight="48dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:hint="Catalog"
                        android:background="@color/wallet_holo_blue_light"
                        android:layout_gravity="center_horizontal" />


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edLocation"
                        android:minHeight="48dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:hint="Location"
                        android:background="@color/wallet_holo_blue_light"
                        android:layout_gravity="center_horizontal" />


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:id="@+id/info"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="UPLOAD"
                android:layout_weight="0"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/wallet_holo_blue_light"
                android:background="@drawable/ic_action_down_arrow"
                android:layout_marginBottom="5dp"
                android:id="@+id/btUpload" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/likeus"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_search_black"
                android:visibility="gone"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>