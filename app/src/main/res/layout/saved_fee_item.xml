<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/tipImage"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/feeds_image" />

            <TextView
                android:id="@+id/txtcatageory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="TextView"
                android:padding="5dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/txtTipTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtcatageory"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/tipImage"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>

            <View
                android:id="@+id/textView43"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/txtTipTitle"
                android:layout_below="@+id/txtTipTitle"
                android:layout_marginTop="5dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView43"
                android:layout_below="@+id/textView43"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/doctorImage"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="TextView"
                    android:src="@drawable/ic_action_placeholder"/>

                <TextView
                    android:id="@+id/txtDoctorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>

            <!---->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>