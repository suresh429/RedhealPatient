<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/defaltLayout"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <ImageView
            android:id="@+id/imgSpecilities"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/gynecologist_icon"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/txtSpecialization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="serif"
            android:padding="8dp"
            android:text="TextView"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/imgSpecilities" />

       <!-- <View
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignStart="@+id/txtSpecialization"
            android:layout_below="@+id/txtSpecialization"
            android:background="@android:color/darker_gray"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            />-->
    </RelativeLayout>



</LinearLayout>