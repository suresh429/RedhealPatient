<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/searchClinicLayout"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cliniImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_action_placeholder" />

    <TextView
        android:id="@+id/textClinicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/cliniImage"
        android:text="TextView"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textClinicName"
        android:layout_below="@+id/textClinicName"
        android:text="TextView"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>