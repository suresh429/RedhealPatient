                                 android:layout_centerVertical="true"
                                 android:layout_centerHorizontal="true"
                                 android:textColor="#2a2929" />-->

                        </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:id="@+id/viewAll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="right|center_vertical"
                        android:text="MORE"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10sp"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/textViewCurrentscheduled"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Current Scheduled"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </RelativeLayout>

                <!-- <ss.com.bannerslider.views.BannerSlider
                     android:id="@+id/banner_slider2"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     app:animateIndicators="true"
                     app:defaultIndicators="circle"
                     app:interval="5000"
                     app:loopSlides="true" />-->


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewAll2"
                        android:layout_gravity="right"
                        android:text="MORE"
                        android:textSize="10sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/textViewTopspeclities"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Top Specialities"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardViewTopSpecilities"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   />

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewAll3"
                        android:layout_gravity="right"
                        android:text="MORE"
                        android:textSize="10sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/textViewalternate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Alternate Treatments"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardViewAlternate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:padding="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewAll4"
                        android:layout_gravity="right"
                        android:text="MORE"
                        android:textSize="10sp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/textViewSeasonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="Seasonal Recommendation"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>

                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cardViewRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                </android.support.v7.widget.CardView>

            </LinearLayout>




        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
