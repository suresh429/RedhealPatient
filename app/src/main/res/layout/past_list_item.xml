<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <TextView
                android:id="@+id/txtDoctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/patientImage1"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/patientImage1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtDoctorName"
                android:text="TextView"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/patientImage1"
                android:text="TextView"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txtDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtAddress"
                android:text="TextView"
                android:textSize="12sp"/>



            <RelativeLayout
                android:id="@+id/noteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:layout_below="@+id/txtStatus"
                android:layout_alignParentStart="true"
                >


                <View
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:text="TextView"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txtDateTime"
                    android:layout_alignParentEnd="true"
                    android:background="@color/ColorGray"
                    android:layout_marginTop="5dp"/>


                <TextView
                    android:id="@+id/textAddRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Add Record"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_below="@+id/textView52"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:id="@+id/textFeedBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FeedBack"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:layout_alignTop="@+id/textView52"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"/>
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>